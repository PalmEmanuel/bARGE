{
  "name": "barge-vscode",
  "displayName": "bARGE - basic Azure Resource Graph Explorer",
  "description": "bARGE is a basic Azure Resource Graph Explorer for VS Code.",
  "version": "0.0.5",
  "publisher": "PalmEmanuel",
  "icon": "media/bARGE-small.png",
  "author": {
    "name": "Emanuel Palm",
    "url": "https://github.com/PalmEmanuel"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PalmEmanuel/bARGE.git"
  },
  "bugs": {
    "url": "https://github.com/PalmEmanuel/bARGE/issues"
  },
  "homepage": "https://github.com/PalmEmanuel/bARGE#readme",
  "keywords": [
    "azure",
    "resource graph",
    "kql",
    "kusto",
    "query",
    "explorer",
    "arg"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "barge.openResults",
        "title": "bARGE: Open Results Panel",
        "category": "bARGE"
      },
      {
        "command": "barge.runQueryFromFile",
        "title": "bARGE: Run Query from Current File",
        "category": "bARGE"
      },
      {
        "command": "barge.runQueryFromSelection",
        "title": "bARGE: Run Selected Query",
        "category": "bARGE"
      },
      {
        "command": "barge.setScope",
        "title": "bARGE: Set Query Scope",
        "category": "bARGE"
      }
    ],

    "menus": {
      "commandPalette": [
        {
          "command": "barge.openResults",
          "title": "bARGE: Open Results Panel"
        },
        {
          "command": "barge.runQueryFromFile",
          "title": "bARGE: Run Query from Current File",
          "when": "editorLangId == kql || resourceExtname == .kql"
        },
        {
          "command": "barge.runQueryFromSelection",
          "title": "bARGE: Run Selected Query",
          "when": "editorHasSelection && (editorLangId == kql || resourceExtname == .kql)"
        },
        {
          "command": "barge.setScope",
          "title": "bARGE: Set Query Scope"
        }
      ],
      "editor/context": [
        {
          "command": "barge.runQueryFromFile",
          "title": "bARGE: Run Query from File",
          "when": "resourceExtname == .kql",
          "group": "barge@1"
        },
        {
          "command": "barge.runQueryFromSelection",
          "title": "bARGE: Run Selected Query",
          "when": "editorHasSelection && resourceExtname == .kql",
          "group": "barge@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "barge.runQueryFromSelection",
        "key": "f8",
        "when": "editorTextFocus && (editorLangId == kql || resourceExtname == .kql)"
      }
    ],
    "languages": [
      {
        "id": "kql",
        "aliases": [
          "KQL",
          "Kusto Query Language"
        ],
        "extensions": [
          ".kql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "bARGE",
      "properties": {
        "barge.defaultSubscription": {
          "type": "string",
          "default": "",
          "description": "Default Azure subscription ID to use for queries"
        },
        "barge.autoAuthenticate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically authenticate with Azure on extension activation"
        },
        "barge.runQueryKeybinding": {
          "type": "string",
          "default": "f8",
          "description": "Default keybinding for running selected query text is F8. To customize keybindings, go to File > Preferences > Keyboard Shortcuts and search for 'barge' commands."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0"
  },
  "dependencies": {
    "@azure/arm-subscriptions": "^5.1.0",
    "@azure/identity": "^4.11.1",
    "@azure/msal-node": "^3.7.3"
  }
}
